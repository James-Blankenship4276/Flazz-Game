<Window x:Class="Flazz_Game.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flazz_Game"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="iStock-184792097.jpg"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="            Settings" VerticalAlignment="Top" Height="106" Width="782" FontSize="72"/>
        <Button x:Name="Back" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="148" Height="70" Margin="28,324,0,0" Click="Main_Click" FontSize="36" Background="White" BorderBrush="Black"/>
        <Button x:Name="Music_on" Content="UnMute" HorizontalAlignment="Left" Height="58" Margin="293,149,0,0" VerticalAlignment="Top" Width="185" FontSize="36" Background="White" BorderBrush="Black" Click="Music_on_Click"/>
        <Button x:Name="Music_off" Content="Mute" HorizontalAlignment="Left" Height="59" Margin="293,229,0,0" VerticalAlignment="Top" Width="185" FontSize="36" Background="White" BorderBrush="Black" Click="Music_off_Click"/>

    </Grid>
</Window>
